{
  "manifest_version": 2,
  "name": "M!Service",
  "description": "Synchronisiert Maniac-Forum Gelesen-Status zwischen deinen Ger√§ten.",
  "homepage_url": "https://github.com/Stitch7/mservice-webextension",
  "version": "1.0.2",
  "author": "Christopher Reitz",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "64": "icons/icon64.png",
    "128": "icons/icon128.png"
  },
  "browser_action" : {
    "default_icon": "icons/icon-toolbar.png"
  },
  "permissions": [
    "https://nerds.berlin/mservice-1.2/",
    "tabs",
    "storage"
  ],
  "background": {
    "scripts": ["src/background.js"]
  },
  "options_ui": {
    "page": "options/options.html",
    "chrome_style": true
  },
  "web_accessible_resources": [
    "images/loading.gif"
  ],
  "content_scripts": [{
    "all_frames": true,
    "js": [
      "src/jquery.min.js",
      "src/mservice.js"
    ],
    "css" : [
      "css/mservice.css"
    ],
    "matches": [
      "*://*.maniac-forum.de/*"
    ]
  }]
}